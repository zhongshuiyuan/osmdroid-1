<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huejie.osmdroid.project.recordbook.bookfragment.SmallBridgeAndCulvertRecordBookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_f1_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_5_dp"
            android:paddingLeft="@dimen/dimen_8_dp"
            android:paddingRight="@dimen/dimen_8_dp"
            android:paddingTop="@dimen/dimen_5_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结构形式："
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_12_sp" />

            <CheckedTextView
                android:id="@+id/tv_structureType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_input_bg"
                android:drawableRight="@drawable/btn_arrow_selector"
                android:gravity="center_vertical"
                android:minWidth="@dimen/dimen_150_dp"
                android:padding="@dimen/dimen_5_dp"
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_f1_dp"

            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_15_dp"
            android:paddingLeft="@dimen/dimen_8_dp"
            android:paddingRight="@dimen/dimen_8_dp"
            android:paddingTop="@dimen/dimen_10_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中心桩号"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_zh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5_dp"
                        android:textSize="@dimen/text_size_12_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地名或河名"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_dmhm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:gravity="center_vertical"
                        android:maxLength="32"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="角  度"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_jiaodu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="初拟孔径"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_cnkj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设计标高"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_sjbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沟底标高"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_gdbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结构物主要用途"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <CheckedTextView
                        android:id="@+id/tv_jgwyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:drawableRight="@drawable/btn_arrow_selector"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5_dp"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="涵长（或桥长）"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_hcqc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="涵顶填土高度（m）"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_hdttgd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="河床坡度"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_hcpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="河床土壤及植被"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_hctrzb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:gravity="center_vertical"
                        android:maxLength="32"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测时水深"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_csss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5_dp"
                        android:background="@drawable/shape_input_bg"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dimen_5_dp"
                        android:singleLine="true"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="初拟进出口\n型式-涵洞"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="初拟下部结构和\n基础结构型式-小桥"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.huejie.osmdroid.view.AllShowListView
                    android:id="@+id/lv_cn"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_add_cn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:src="@mipmap/add"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="历史洪水位"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_14_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="年份"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="标高"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="位置"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周期"
                        android:textColor="@color/delect_color"
                        android:textSize="@dimen/text_size_12_sp" />
                </LinearLayout>

                <com.huejie.osmdroid.view.AllShowListView
                    android:id="@+id/lv_lshsw"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_add_lshsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:src="@mipmap/add"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:text="河道（沟、渠）、被交路、交叉管线描述："
        android:textColor="@color/tect_color"
        android:textSize="@dimen/text_size_14_sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_hdjlms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:background="@drawable/shape_input_bg_white"
        android:gravity="left|top"
        android:hint="@string/inputText"
        android:maxLength="256"
        android:maxLines="3"
        android:minHeight="@dimen/dimen_100_dp"
        android:padding="@dimen/dimen_15_dp"
        android:textColor="@color/delect_color"
        android:textSize="@dimen/text_size_14_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:text="汇水面积、地形、地貌、地质概况描述："
        android:textColor="@color/tect_color"
        android:textSize="@dimen/text_size_14_sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_hsdxdmms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:background="@drawable/shape_input_bg_white"
        android:gravity="left|top"
        android:hint="@string/inputText"
        android:maxLength="256"
        android:maxLines="3"
        android:minHeight="@dimen/dimen_100_dp"
        android:padding="@dimen/dimen_15_dp"
        android:textColor="@color/delect_color"
        android:textSize="@dimen/text_size_14_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:text="改河（沟、渠）和改路方案描述："
        android:textColor="@color/tect_color"
        android:textSize="@dimen/text_size_14_sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_ghglfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:background="@drawable/shape_input_bg_white"
        android:gravity="left|top"
        android:hint="@string/inputText"
        android:maxLength="256"
        android:maxLines="3"
        android:minHeight="@dimen/dimen_100_dp"
        android:padding="@dimen/dimen_15_dp"
        android:textColor="@color/delect_color"
        android:textSize="@dimen/text_size_14_sp" />
</LinearLayout>
