<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_file"
            style="@style/TextNornal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:text="谷歌影像"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_work"
                android:layout_width="@dimen/dimen_45_dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/add_work" />


            <CheckedTextView
                android:id="@+id/checkTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/rb_check"
                android:drawablePadding="@dimen/dimen_5_dp"
                android:gravity="center"
                android:text="全选" />
        </LinearLayout>
    </LinearLayout>


    <com.huejie.osmdroid.view.AllShowListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></com.huejie.osmdroid.view.AllShowListView>

</LinearLayout>
