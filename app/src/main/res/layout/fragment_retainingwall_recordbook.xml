<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_10_dp"
    android:orientation="vertical"
    tools:context=".project.recordbook.bookfragment.RetainingWallRecordBookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_input_bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_8_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_8_dp"
        android:paddingBottom="@dimen/dimen_15_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bianhao"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_bianhao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="32"
                    android:padding="@dimen/dimen_5_dp"
                    android:singleLine="true"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="@dimen/dimen_5_dp">

                <TextView
                    android:id="@+id/tv_baseWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/juzhongxinpianju"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/shape_input_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_5_dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zuoce"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />

                        <EditText
                            android:id="@+id/et_zcpj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ems="7"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/dimen_5_dp"
                            android:singleLine="true"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5_dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_input_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_5_dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/youce"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />

                        <EditText
                            android:id="@+id/et_ycpj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ems="7"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/dimen_5_dp"
                            android:singleLine="true"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qidianzhuanghao"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_qdzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="@dimen/dimen_5_dp"
                    android:singleLine="true"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_start_qz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="k"
                            android:minWidth="@dimen/dimen_10_dp"
                            android:textSize="@dimen/text_size_12_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5_dp"
                            android:text="+"
                            android:textSize="@dimen/text_size_12_sp" />

                        <EditText
                            android:id="@+id/et_start_zh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/zhuanghao"
                            android:inputType="number"
                            android:minWidth="@dimen/dimen_30_dp"
                            android:singleLine="true"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhongdianzhuanghao"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_zdzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="@dimen/dimen_5_dp"
                    android:singleLine="true"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_end_qz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="zk"
                            android:minWidth="@dimen/dimen_10_dp"
                            android:textSize="@dimen/text_size_12_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5_dp"
                            android:text="+"
                            android:textSize="@dimen/text_size_12_sp" />

                        <EditText
                            android:id="@+id/et_end_zh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/zhuanghao"
                            android:inputType="number"
                            android:minWidth="@dimen/dimen_30_dp"
                            android:singleLine="true"
                            android:textColor="@color/delect_color"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luduanchangdu"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_ldcd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="@dimen/dimen_5_dp"
                    android:singleLine="true"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zuidaqianggao"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_zdqg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/dimen_5_dp"
                    android:singleLine="true"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dangqiangleixing"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/tv_dqlx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:clickable="true"
                    android:drawableRight="@drawable/btn_arrow_selector"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_5_dp"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jiegouxingshi"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/tv_jgxs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:clickable="true"
                    android:drawableRight="@drawable/btn_arrow_selector"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_5_dp"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shezhiyuanyin"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="top|left"
                    android:maxLength="32"
                    android:minWidth="@dimen/dimen_50_dp"
                    android:minHeight="@dimen/dimen_40_dp"
                    android:padding="@dimen/dimen_5_dp"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jichuyanceng"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_tjcz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:background="@drawable/shape_input_bg"
                    android:gravity="top|left"
                    android:maxLength="32"
                    android:minHeight="@dimen/dimen_40_dp"
                    android:padding="@dimen/dimen_5_dp"
                    android:textColor="@color/delect_color"
                    android:textSize="@dimen/text_size_12_sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangtushiyi"
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_14_sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_dt_load_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:padding="@dimen/dimen_10_dp"
                android:src="@mipmap/load_file" />

            <ImageView
                android:id="@+id/iv_dt_add_shiyitu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:padding="@dimen/dimen_10_dp"
                android:src="@mipmap/add_shiyitu" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dp">

            <ImageView
                android:id="@+id/iv_hdm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

            <TextView
                android:id="@+id/tv_dt_syt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="@string/showDiagrammaticSketch"
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_14_sp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pingmianshiyi"
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_14_sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_pm_load_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:padding="@dimen/dimen_10_dp"
                android:src="@mipmap/load_file" />

            <ImageView
                android:id="@+id/iv_pm_add_shiyitu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:padding="@dimen/dimen_10_dp"
                android:src="@mipmap/add_shiyitu" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dp">

            <ImageView
                android:id="@+id/iv_pm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

            <TextView
                android:id="@+id/tv_pm_syt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="@string/showDiagrammaticSketch"
                android:textColor="@color/delect_color"
                android:textSize="@dimen/text_size_14_sp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
